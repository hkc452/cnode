/* pages/msg/msg.wxss */
.msg .msgHeader{
  display: flex;
  padding: 20rpx 40rpx;
  background-color: #fff;
  position: fixed;
  top: 0rpx;
  width: calc(100% - 80rpx);
  /* left: 20rpx; */
}
.msg .msgHeader .item{
  flex:1;
  text-align: center;
  font-size: 30rpx;
  color: #aaa;
  padding: 10rpx;
  background-color: #f7f7f7;
  /* color: #80bd01; */
}
.msg .msgHeader .item:first-child{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.msg .msgHeader .item:last-child{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.msg .msgHeader .item.active{
  background-color: #f1f1f1;
  color: #80bd01;
}
.msg .msgList{
  padding-top: 100rpx;
  background-color: #fff;
}
.msg .msgList .msgLissItem {
  margin: 0rpx 40rpx 0rpx;
  height: 300rpx;
  border-radius: 8rpx;
  border:2rpx solid #eee;
  margin-top: 10rpx;
}